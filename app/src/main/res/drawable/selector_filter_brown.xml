<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <layer-list>
            <item android:bottom="1dp"
                  android:drawable="@drawable/filter_oval_brown"
                  android:left="1dp"
                  android:right="1dp"
                  android:top="1dp"/>
            <item android:drawable="@drawable/filter_oval_stroke_accent"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="1dp"
                  android:drawable="@drawable/filter_oval_brown"
                  android:left="1dp"
                  android:right="1dp"
                  android:top="1dp"/>

            <item android:drawable="@drawable/filter_oval_stroke_not_accent"/>

        </layer-list>
    </item>
</selector>
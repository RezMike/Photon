<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
        <item name="colorControlNormal">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomDialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_description_text_view</item>
    </style>

    <style name="title_text_view" parent="text_view">
        <item name="android:textSize">@dimen/font_size_normal_16</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="description_text_view" parent="text_view">
        <item name="android:textSize">@dimen/font_size_normal_14</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">@dimen/font_size_mini_4</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="FotonBtn" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">62dp</item>
    </style>

    <style name="CustomButton">
        <item name="android:minHeight">58dp</item>
    </style>

    <style name="dialog_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dialog_background</item>
    </style>

    <style name="edit_text_borders">
        <item name="android:background">@drawable/borders_edit_text</item>
        <item name="android:padding">@dimen/spacing_very_small_8</item>
    </style>

    <style name="checkbox">

    </style>

    <style name="checkbox.checkbox_filters">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_filter_not_accent</item>
        <item name="android:textSize">@dimen/font_size_normal_10</item>
        <item name="android:button">@null</item>
    </style>

    <style name="wrap_section_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_16</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_16</item>
    </style>

    <style name="image_style">
        <item name="android:background">@color/color_accent</item>
    </style>

    <style name="avatar_style">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <!--<item name="android:scaleType">centerCrop</item>-->
        <item name="civ_border_width">0dp</item>
    </style>

    <style name="flex_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/spacing_small_16</item>
        <item name="android:paddingLeft">@dimen/spacing_small_16</item>
        <item name="android:paddingRight">@dimen/spacing_small_16</item>
        <item name="android:background">@color/white</item>
        <item name="alignContent">flex_start</item>
        <item name="alignItems">flex_start</item>
        <item name="dividerDrawable">@drawable/divider_tags</item>
        <item name="flexWrap">wrap</item>
        <item name="showDivider">middle</item>
    </style>
</resources>
